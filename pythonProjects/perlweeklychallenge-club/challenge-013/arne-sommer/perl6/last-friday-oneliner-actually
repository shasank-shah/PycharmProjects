#! /usr/bin/env perl6

-> $year { -> $month { -> $date { say $date.earlier(days => $date.day-of-week < 5 ?? ( $date.day-of-week + 2 ) !! ( $date.day-of-week - 5) ).Str.trans("-" => "/") }(Date.new($year, $month, Date.new($year, $month, 1).days-in-month)) }($_) for 1 .. 12 }(@*ARGS[0] // DateTime.now.year);
