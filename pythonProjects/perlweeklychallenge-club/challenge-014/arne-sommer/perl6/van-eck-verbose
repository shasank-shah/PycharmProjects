#! /usr/bin/env perl6

unit sub MAIN (Int $limit = 10, :$verbose = False);

my @van-eck = (0);
  
@van-eck.push(van-help(@van-eck)) for ^($limit -1);

if $verbose
{
  my $count = 1;
  say "{ $count++ }: $_" for @van-eck;
}
else
{
  say @van-eck.join(", ");
}

sub van-help(@array is copy)
{
  my $last = @array.pop;

  if any(@array) == $last
  {
    for @array.reverse
    {
      state $delta++;
      return $delta if $_ == $last;
    }
  }
  return 0;
}