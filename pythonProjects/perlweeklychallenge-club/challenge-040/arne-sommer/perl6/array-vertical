#! /usr/bin/env raku

multi MAIN ()
{
  MAIN('I L O V E Y O U', '2 4 0 3 2 0 1 9', '! ? Â£ $ % ^ & *');
}

multi MAIN (:$verbose, *@strings where @strings.elems)
{
  my @arrays = @strings.map(*.words);
  
  my $length = @arrays>>.elems.max; 

  if $verbose
  {
    say ":A: { @arrays.perl }";
    say ":L: $length";
  }
  
  for ^$length -> $index
  {
    print "{ $_[$index] // ' ' } " for @arrays;
    say "";
  }
}
